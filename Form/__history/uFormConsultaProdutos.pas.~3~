    { Public declarations }
  end;

var
  FormConsultaProdutos: TFormConsultaProdutos;

implementation

{$R *.dfm}

procedure TFormConsultaProdutos.Consultar;
begin
  fdQryConsulta.Close;
  fdQryConsulta.SQL.Clear;
  fdQryConsulta.SQL.Add(' SELECT P.DESCRICAO, ');
         P.QTDE,
         P.CUSTO,
         P.V_UNITARIO,
         P.UNIDADE,
         P.PESO_LIQUIDO,
         P.PESO_BRUTO,
         P.FABRICANTE,
         P.MARCA_MODELO,
         F.RAZAO_SOCIAL FORNECEDOR
      FROM PRODUTO P
      LEFT JOIN FORNECEDOR F ON (F.ID_FORNECEDOR = P.ID_FORNECEDOR)
     WHERE 1 = 1
end;

end.
